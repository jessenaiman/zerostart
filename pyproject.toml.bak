[tool.poetry]
name = "zerostart"
version = "0.1.0"
description = "One-command Python project initialization"
authors = ["Jesse Naiman <jesse@example.com>"]

[tool.poetry.dependencies]
python = "^3.13.2"

[tool.poetry.group.core.dependencies]
pydantic = "*"
tomli = "*"

[tool.poetry.group.dev.dependencies]
mypy = "*"
black = "*"
isort = "*"
flake8 = "*"
pre-commit = "*"
ipdb = "*"
debugpy = "*"
loguru = "*"
ruff = "*"
bandit = "*"
pydocstyle = "*"
interrogate = "*"

[tool.poetry.group.test.dependencies]
pytest = "*"
pytest-cov = "*"
hypothesis = "*"
pytest-mock = "*"
pytest-benchmark = "*"
green = "*"

[tool.poetry.group.docs.dependencies]
sphinx = "*"
sphinx-rtd-theme = "*"
myst-parser = "*"
sphinx-autobuild = "*"
sphinx-autodoc-typehints = "*"
sphinx-copybutton = "*"


[tool.poetry.group.diagram.dependencies]
graphviz = "^0.20.3"
pylint = "^3.3.6"


[tool.poetry.group.ml.dependencies]
pandas = "^2.2.3"
numpy = "^2.2.4"
matplotlib = "^3.10.1"
seaborn = "^0.13.2"


[tool.poetry.group.game.dependencies]
arcade = "^3.1.0"
pyglet = "^2.1.3"
rich = "^14.0.0"
alive-progress = "^3.2.0"


[tool.poetry.group.data.dependencies]
sqlalchemy = "^2.0.40"
alembic = "^1.15.2"
psycopg2 = "^2.9.10"

[tool.poetry.scripts]
format = "black ."
lint = "ruff check ."
typecheck = "mypy ."

[tool.interrogate]
ignore-init-method = true
ignore-init-module = true
ignore-magic = false
ignore-semiprivate = false
ignore-private = false
ignore-module = false
ignore-nested-functions = false
ignore-nested-classes = false
fail-under = 100