[tool.poetry]
name = "zerostart"
version = "0.1.0"
description = "One-command Python project initialization"
authors = ["Jesse Naiman <jesse@example.com>"]

[tool.poetry.dependencies]
python = "^3.13.2"

[tool.poetry.group.core.dependencies]
pydantic = "*"
tomli = "*"

[tool.poetry.group.dev.dependencies]
mypy = "*"
black = "*"
isort = "*"
flake8 = "*"
pre-commit = "*"
ipdb = "*"
debugpy = "*"
loguru = "*"
ruff = "*"
bandit = "*"
pydocstyle = "*"
interrogate = "*"

[tool.poetry.group.test.dependencies]
pytest = "*"
pytest-cov = "*"
hypothesis = "*"
pytest-mock = "*"
pytest-benchmark = "*"
green = "*"

[tool.poetry.group.docs.dependencies]
sphinx = "*"
sphinx-rtd-theme = "*"
myst-parser = "*"
sphinx-autobuild = "*"
sphinx-autodoc-typehints = "*"
sphinx-copybutton = "*"


[tool.poetry.group.diagram.dependencies]
graphviz = "^0.20.3"
pylint = "^3.3.6"


[tool.poetry.group.ml.dependencies]
pandas = "^2.2.3"
numpy = "^2.2.4"
matplotlib = "^3.10.1"
seaborn = "^0.13.2"


[tool.poetry.group.game.dependencies]
arcade = "^3.1.0"
pyglet = "*"
rich = "*"
alive-progress = "*"

[tool.poetry.group.data.dependencies]
sqlalchemy = "*"
alembic = "*"
psycopg2 = "*"

[tool.poetry.scripts]
format = "black ."
lint = "ruff check ."
typecheck = "mypy ."